{
  "extends": "@walless/tsconfig/next.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "components/*": [
        "./components/*"
      ],
      "pages/*": [
        "./pages/*"
      ],
      "screens/*": [
        "./screens/*"
      ],
      "utils/*": [
        "./utils/*"
      ],
      "state/*": [
        "./state/*"
      ]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "next.config.js",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
